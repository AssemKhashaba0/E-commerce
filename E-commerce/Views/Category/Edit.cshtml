<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Back button with icon -->
            <button onclick="window.history.back()" class="btn btn-secondary mb-3">
                <a href="/Category/index"><i class="fas fa-arrow-left"></i></a>  Back
            </button>

            <h2 class="text-center mb-4">Edit Category : @Model.Name</h2>
            <form action="/Category/Edit" method="post">
                <input type="hidden" class="form-control" name="Id" value="@Model.Id">

                <div class="mb-3">
                    <label for="newCategory" class="form-label">New Category</label>
                    <input type="text" class="form-control" id="newCategory" placeholder="Enter category name" name="Name" value="@Model.Name">
                </div>
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
    </div>
</div>